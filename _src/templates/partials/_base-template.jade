block config
	include ../variables/_config.jade

doctype html
html
	head(lang=language)
		
		title
			block name
				|	#{personName}
		
		block metatags
			meta(http-equiv="content-type", content="text/html; charset=UTF-8")
			meta(name="description", content=metaDescription)
			meta(name="keywords", content="")
			meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")

		block styles

			if bootstrap
				link( rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css" )

			if fontAwesome
				link( rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" ) 

			if materialize
				link( rel="stylesheet", href="lib/materialize/bin/materialize.css" )
				script( src="lib/jquery/dist/jquery.js", type="text/javascript")
				script( src="lib/materialize/bin/materialize.js", type="text/javascript")   

			if customStyles
				link( rel="stylesheet", href="css/resume.css" )

	//- Body Layout Starts
	body(class=bodyClasses)
		main
			.row
				//- Left Column
				#side-nav.col.s12.m5.l4.primary-color
					
					//- Card Portrait
					include _portrait-card.jade

					//- Main Nav
					.main-nav-wrapper.center-align
					//- Facts Area
					.facts-wrapper.light-text
					
						//- Summary
						.row
							include _summary.jade
						
						//- Contact
						.row
							include _contact.jade

						
						//- Skills
						.row
							include _skills.jade

						//- Download
						.row
							include _download.jade

				//- end left column
				
				//- Content Column
				#main-panel.col.s12.m7.l8
					//- Experience
					.card-panel
						.row
							include _work.jade

					//- Timeline
					.card-panel
						.row
							include _timeline.jade

					//- Education
					.card-panel
						.row
							include _education.jade

					//- Contact Footer
					.card-panel
						.row
							include _built-with.jade

					//- Contact Footer
					.card-panel
						.row
							include _contact-footer.jade


		//- Footer
		footer.page-footer

		//- include _fork-me.jade
		

		//- Import jQuery before materialize.js
		if materialize
				script( src="lib/jquery/dist/jquery.js", type="text/javascript")
				script( src="lib/materialize/bin/materialize.js", type="text/javascript")   
		script.
			'use strict';
			$(document).ready(function(){
			// End document.ready
			});